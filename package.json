{
  "name": "comp",
  "version": "1.0.1",
  "description": "A design pattern and micro-framework for creating UI components",
  "main": "comp.js",
  "engines": {
    "node": ">=4.4.0"
  },
  "files": [
    "comp.js"
  ],
  "scripts": {
    "test": "nyc ava --verbose",
    "test:watch": "ava --verbose --watch",
    "sass-compile": "node-sass ./examples/scss/ -o ./examples/css/ --source-map true --output-style compressed",
    "sass-compile:watch": "yarn run sass-compile && yarn run sass-compile -- --watch ./src/examples/scss/",
    "build": "rollup -c",
    "postbuild": "uglifyjs comp.min.js -m --comments all -o comp.min.js --source-map comp.min.js.map",
    "build:watch": "yarn run build -- --watch",
    "prestart": "node tools/devStartMessage.js",
    "start": "npm-run-all -p test:watch sass-compile:watch build:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendan-jefferis/comp.git"
  },
  "author": "Brendan Jefferis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendan-jefferis/comp/issues"
  },
  "homepage": "https://github.com/brendan-jefferis/comp#readme",
  "dependencies": {
    "html-template-tag": "^1.0.0",
    "set-dom": "~6.0.0"
  },
  "devDependencies": {
    "ava": "~0.17.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-latest": "^6.16.0",
    "browser-env": "^2.0.19",
    "chalk": "^1.1.3",
    "node-sass": "^4.1.1",
    "npm-run-all": "~3.1.2",
    "nyc": "^10.0.0",
    "rollup": "^0.38.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^6.0.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "sinon": "^1.17.6",
    "uglify-js": "^2.7.5"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js",
      "!src/lib/**/*",
      "!dist/**/*"
    ],
    "require": [
      "babel-register",
      "./src/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  }
}
